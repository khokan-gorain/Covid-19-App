<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context="com.khokan_gorain.covid19.dasbode_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/lay1"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/dim_120dp"
                    android:layout_height="@dimen/dim_120dp"
                    android:onClick="home"
                    app:cardElevation="@dimen/dim_10dp"
                    app:cardCornerRadius="@dimen/dim_5dp"
                    android:layout_marginLeft="@dimen/dim_20dp"
                    android:layout_marginTop="@dimen/dim_25dp"
                    android:layout_marginRight="@dimen/dim_15dp"
                    android:layout_marginBottom="@dimen/dim_15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/dim_70dp"
                            android:layout_height="@dimen/dim_70dp"
                            android:layout_marginTop="@dimen/dim_10dp"
                            android:src="@drawable/home1"
                            android:layout_gravity="center">
                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/dim_10dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginTop="@dimen/dim_10dp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:text="HOME"
                            android:gravity="center_horizontal">
                        </TextView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/dim_120dp"
                    android:layout_height="@dimen/dim_120dp"
                    android:onClick="countries"
                    app:cardElevation="@dimen/dim_10dp"
                    app:cardCornerRadius="@dimen/dim_5dp"
                    android:layout_marginLeft="@dimen/dim_15dp"
                    android:layout_marginTop="@dimen/dim_25dp"
                    android:layout_marginRight="@dimen/dim_15dp"
                    android:layout_marginBottom="@dimen/dim_15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/dim_70dp"
                            android:layout_height="@dimen/dim_70dp"
                            android:layout_marginTop="@dimen/dim_10dp"
                            android:src="@drawable/countries"
                            android:layout_gravity="center">
                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/dim_10dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginTop="@dimen/dim_10dp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:text="COUNTRIES"
                            android:gravity="center_horizontal">
                        </TextView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay2"
                android:layout_below="@+id/lay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/dim_120dp"
                    android:layout_height="@dimen/dim_120dp"
                    android:onClick="covid19"
                    app:cardElevation="@dimen/dim_10dp"
                    app:cardCornerRadius="@dimen/dim_5dp"
                    android:layout_marginLeft="@dimen/dim_20dp"
                    android:layout_marginTop="@dimen/dim_25dp"
                    android:layout_marginRight="@dimen/dim_15dp"
                    android:layout_marginBottom="@dimen/dim_15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/dim_70dp"
                            android:layout_height="@dimen/dim_70dp"
                            android:layout_marginTop="@dimen/dim_10dp"
                            android:src="@drawable/covid"
                            android:layout_gravity="center">
                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/dim_10dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginTop="@dimen/dim_10dp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:text="COVID-19"
                            android:gravity="center_horizontal">
                        </TextView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/dim_120dp"
                    android:layout_height="@dimen/dim_120dp"
                    android:onClick="dev"
                    app:cardElevation="@dimen/dim_10dp"
                    app:cardCornerRadius="@dimen/dim_5dp"
                    android:layout_marginLeft="@dimen/dim_15dp"
                    android:layout_marginTop="@dimen/dim_25dp"
                    android:layout_marginRight="@dimen/dim_15dp"
                    android:layout_marginBottom="@dimen/dim_15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/dim_70dp"
                            android:layout_height="@dimen/dim_70dp"
                            android:layout_marginTop="@dimen/dim_10dp"
                            android:src="@drawable/dev"
                            android:layout_gravity="center">
                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/dim_10dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginTop="@dimen/dim_10dp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:text="DEVELOPER"
                            android:gravity="center_horizontal">
                        </TextView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/lay2"
                android:layout_width="@dimen/dim_250dp"
                android:layout_marginTop="@dimen/dim_20dp"
                android:layout_marginLeft="@dimen/dim_30dp"
                android:layout_marginRight="@dimen/dim_30dp"
                android:layout_marginBottom="@dimen/dim_10dp"
                android:layout_height="@dimen/dim_170dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/dim_5dp"
                    app:cardElevation="@dimen/dim_10dp">
                    <ImageView
                        android:onClick="ban"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ban">
                    </ImageView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>